---
import Hero from "@components/ui/Hero.astro";
import Layout from "@layouts/Layout.astro";
import sections from "src/data/sections.json";
import ContentGrid from "@components/content/grid/ContentGrid.astro";
import {
  createCuisineFilterConfig,
  createDietFilterConfig,
  createRecipeTypeFilterConfig,
} from "src/lib/garden/filters";

const filters = await Promise.all([
  createCuisineFilterConfig(),
  createDietFilterConfig(),
  createRecipeTypeFilterConfig(),
]);
---

<Layout>
  <title slot="head">Recipes | Alessandro Desantis</title>

  <Hero>
    <span slot="heading">Recipes</span>
    <span slot="subheading">
      {sections.recipes.description}
    </span>
  </Hero>

  <ContentGrid searchParams={{ collections: ["recipes"] }} itemSize="M" filters={filters} />
</Layout>
