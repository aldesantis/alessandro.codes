---
import Hero from "@components/ui/Hero.astro";
import Layout from "@layouts/Layout.astro";
import sections from "src/data/sections.json";
import { createTopicFilterConfig } from "src/lib/garden/filters";
import ContentGrid from "@components/content/grid/ContentGrid.astro";
---

<Layout>
  <title slot="head">Books | Alessandro Desantis</title>

  <Hero>
    <span slot="heading">Books</span>
    <span slot="subheading">
      {sections.books.description}
    </span>
  </Hero>

  <ContentGrid searchParams={{ collections: ["books"] }} itemSize="S" filters={[await createTopicFilterConfig()]} />
</Layout>
