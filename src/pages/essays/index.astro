---
import Hero from "@components/ui/Hero.astro";
import Layout from "@layouts/Layout.astro";
import sections from "src/data/sections.json";
import { getSortedEssays } from "src/lib/garden";
import ContentGrid from "@components/garden/GardenEntriesGrid.astro";

const essays = await getSortedEssays();
---

<Layout>
  <title slot="head">Essays | Alessandro Desantis</title>

  <Hero>
    <span slot="heading">Essays</span>
    <span slot="subheading">
      {sections.essays.description}
    </span>
  </Hero>

  <ContentGrid items={essays} itemSize="L" />
</Layout>
