---
import Hero from "@components/ui/Hero.astro";
import Layout from "@layouts/Layout.astro";
import ContentGrid from "@components/content/grid/ContentGrid.astro";
import {
  createStatusFilterConfig,
  createTopicFilterConfig,
  createCollectionFilterConfig,
} from "src/lib/garden/filters";
---

<Layout>
  <title slot="head">The Garden | Alessandro Desantis</title>

  <Hero>
    <span slot="heading">The Garden</span>
    <span slot="subheading"> A collection of everything I'm thinking about, reading, and writing. </span>
  </Hero>

  <ContentGrid
    searchParams={{ collections: ["essays", "books", "notes", "talks"] }}
    itemSize="M"
    filters={await Promise.all([createStatusFilterConfig(), createTopicFilterConfig(), createCollectionFilterConfig()])}
    layoutType="masonry"
  />
</Layout>
