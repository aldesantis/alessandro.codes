---
import Hero from "@components/ui/Hero.astro";
import Layout from "@layouts/Layout.astro";
import GardenGrid from "@components/garden/entries-grid/GardenGrid.astro";
import { createStatusFilterConfig, createTopicFilterConfig, createTypeFilterConfig } from "src/lib/garden/filters";
---

<Layout>
  <title slot="head">The Garden | Alessandro Desantis</title>

  <Hero>
    <span slot="heading">The Garden</span>
    <span slot="subheading"> A collection of everything I'm thinking about, reading, and writing. </span>
  </Hero>

  <GardenGrid
    searchParams={{ collections: ["essays", "books", "notes", "talks"] }}
    itemSize="M"
    filters={[createStatusFilterConfig(), await createTopicFilterConfig(), createTypeFilterConfig()]}
    layoutType="masonry"
  />
</Layout>
