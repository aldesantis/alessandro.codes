---
import NoteCard from "@components/notes/NoteCard.astro";
import Hero from "@components/ui/Hero.astro";
import Layout from "@layouts/Layout.astro";
import { getSortedNotes } from "src/lib/content/notes";
import sections from "src/data/sections.json";

const notes = await getSortedNotes();
---

<Layout>
  <title slot="head">Notes | Alessandro Desantis</title>

  <Hero>
    <span slot="heading">Notes</span>
    <span slot="subheading">
      {sections.notes.description}
    </span>
  </Hero>

  <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-4">
    {notes.map((note) => <NoteCard note={note} />)}
  </div>
</Layout>
