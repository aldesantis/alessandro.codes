---
import Hero from "@components/ui/Hero.astro";
import Layout from "@layouts/Layout.astro";
import sections from "src/data/sections.json";
import GardenGrid from "@components/garden/entries-grid/GardenGrid.astro";
import { createStatusFilterConfig } from "src/lib/garden/filters";
---

<Layout>
  <title slot="head">Topics | Alessandro Desantis</title>

  <Hero>
    <span slot="heading">Topics</span>
    <span slot="subheading">
      {sections.topics.description}
    </span>
  </Hero>

  <GardenGrid searchParams={{ collections: ["topics"] }} itemSize="M" filters={[createStatusFilterConfig()]} />
</Layout>
