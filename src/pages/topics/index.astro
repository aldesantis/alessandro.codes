---
import TopicCard from "@components/topics/TopicCard.astro";
import Hero from "@components/ui/Hero.astro";
import Layout from "@layouts/Layout.astro";
import sections from "src/data/sections.json";
import { getSortedTopics } from "src/lib/content/topics";

const topics = await getSortedTopics();
---

<Layout>
  <title slot="head">Topics | Alessandro Desantis</title>

  <Hero>
    <span slot="heading">Topics</span>
    <span slot="subheading">
      {sections.topics.description}
    </span>
  </Hero>

  <div class="grid lg:grid-cols-2 gap-8">
    {topics.map((topic) => <TopicCard topic={topic} />)}
  </div>
</Layout>
