---
import Hero from "@components/ui/Hero.astro";
import Layout from "@layouts/Layout.astro";
import sections from "src/data/sections.json";
import { getSortedTopics } from "src/lib/garden/topics";
import ContentGrid from "@components/garden/GardenEntriesGrid.astro";

const topics = await getSortedTopics();
---

<Layout>
  <title slot="head">Topics | Alessandro Desantis</title>

  <Hero>
    <span slot="heading">Topics</span>
    <span slot="subheading">
      {sections.topics.description}
    </span>
  </Hero>

  <ContentGrid items={topics} itemSize="M" />
</Layout>
