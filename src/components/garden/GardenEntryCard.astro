---
import type { GardenEntry } from "src/lib/garden/entries";
import EssayCard from "@components/garden/essays/EssayCard.astro";
import BookCard from "@components/garden/books/BookCard.astro";
import NoteCard from "@components/garden/notes/NoteCard.astro";
import TopicCard from "@components/garden/topics/TopicCard.astro";
import TalkCard from "@components/garden/talks/TalkCard.astro";
import { type CollectionEntry } from "astro:content";

interface Props {
  content: GardenEntry;
}

const { content } = Astro.props;
---

{
  content.collection === "essays" ? (
    <EssayCard essay={content as CollectionEntry<"essays">} />
  ) : content.collection === "books" ? (
    <BookCard book={content as CollectionEntry<"books">} />
  ) : content.collection === "notes" ? (
    <NoteCard note={content as CollectionEntry<"notes">} />
  ) : content.collection === "topics" ? (
    <TopicCard topic={content as CollectionEntry<"topics">} />
  ) : content.collection === "talks" ? (
    <TalkCard talk={content as CollectionEntry<"talks">} />
  ) : null
}
