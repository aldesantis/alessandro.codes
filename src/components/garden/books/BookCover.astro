---
import type { CollectionEntry } from "astro:content";
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

async function fetchBookCover(book: CollectionEntry<"books">): Promise<{ default: ImageMetadata }> {
  const images = import.meta.glob<{ default: ImageMetadata }>("/src/assets/covers/*.jpg");

  const cover = images[`/src/assets/covers/${book.id.toLowerCase()}.jpg`];

  if (!cover) {
    throw new Error(`Cannot find cover for ${book.id}`);
  }

  return await cover();
}

interface Props {
  book: CollectionEntry<"books">;
  class?: string;
}

const { book, class: className } = Astro.props;
const cover = await fetchBookCover(book);
---

<Image
  src={cover.default}
  alt={`${book.data.title} cover`}
  loading="lazy"
  decoding="async"
  quality={50}
  format="webp"
  width={600}
  class={className}
/>
