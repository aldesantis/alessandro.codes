---
interface Props {
  id: string;
  label: string;
  filterCategory: "status" | "topics" | "types";
  isAll?: boolean;
}

const { id, label, filterCategory, isAll = false } = Astro.props;
---

<label class="group flex items-center gap-2 px-3 py-1.5 cursor-pointer transition-colors duration-200">
  <div class="relative flex h-4 w-4 items-center justify-center">
    <input
      type="checkbox"
      class="peer h-3 w-3 appearance-none rounded-sm border-2 border-gray-300 bg-white checked:border-orange-600 checked:bg-orange-600 focus:outline-none focus:ring-2 focus:ring-orange-500"
      data-action="change->garden-entries-grid#filter"
      data-filter-category={filterCategory}
      data-filter-type={id}
      data-garden-entries-grid-target={isAll ? "allCheckbox" : "checkbox"}
      checked={isAll}
    />
    <svg
      fill="none"
      viewBox="0 0 14 14"
      class="pointer-events-none absolute h-3.5 w-3.5 stroke-white opacity-0 peer-checked:opacity-100"
    >
      <path
        d="M3 8L6 11L11 3.5"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
      />
    </svg>
  </div>
  <span class="text-xs group-hover:text-orange-500">{label}</span>
</label> 
