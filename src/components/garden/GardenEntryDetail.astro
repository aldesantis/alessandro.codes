---
import ContentSidebar from "@components/garden/GardenEntrySidebar.astro";
import Prose from "@components/ui/Prose.astro";
import { getMdxComponents } from "src/lib/rendering";
import type { CollectionEntry } from "astro:content";
import { render } from "astro:content";

export interface ContentLayoutProps {
  entry: CollectionEntry<
    "essays" | "notes" | "nows" | "books" | "articles" | "topics"
  >;
}

const { entry } = Astro.props;
const { Content } = await render(entry);
---

<div class="lg:grid lg:grid-cols-12 lg:gap-8">
  <div class="lg:col-span-8">
    <div class="mb-4">
      <slot name="navigation" />

      <h1 class="text-4xl font-semibold font-sans mt-2 mb-1">
        {entry.data.title}
      </h1>

      <div class="mb-2">
        <slot name="meta" />
      </div>

      <div class="lg:hidden mb-8">
        <slot name="sidebar">
          <ContentSidebar entry={entry} />
        </slot>
      </div>
    </div>

    <Prose>
      <Content components={getMdxComponents()} />
    </Prose>
  </div>

  <div class="hidden lg:block lg:col-span-4">
    <div
      class="bg-white shadow-lg rounded-lg p-4 sticky top-4 max-h-[82vh] overflow-y-auto"
    >
      <slot name="sidebar">
        <ContentSidebar entry={entry} />
      </slot>
    </div>
  </div>
</div>
