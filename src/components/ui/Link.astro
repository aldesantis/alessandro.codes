---
import type { HTMLAttributes } from "astro/types";

export interface Props extends HTMLAttributes<"a"> {
  variant?: "primary" | "secondary";
  active?: boolean;
}

const {
  class: originalClass,
  variant = "primary",
  active,
  ...props
} = Astro.props;
---

<a
  {...props}
  class:list={[
    "transition-all",
    "hover:text-orange-700",

    {
      "text-orange-700": active,
      "text-orange-400 transition-all": variant === "primary",
      "hover:text-orange-700": variant === "secondary",
    },

    originalClass,
  ]}><slot /></a
>
