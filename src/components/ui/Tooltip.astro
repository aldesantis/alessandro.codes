---
interface Props {
  tooltip: string;
  underline?: boolean;
}

const { tooltip, underline = true } = Astro.props;
---

<span class="group/tooltip relative inline-block cursor-help">
  <span class={underline ? "underline decoration-dotted underline-offset-2" : ""}>
    <slot />
  </span>
  <span
    class="opacity-0 group-hover/tooltip:opacity-100 transition-all duration-200 ease-in-out absolute z-50 px-2 py-1 text-xs text-white bg-gray-800 rounded-md top-full left-1/2 transform -translate-x-1/2 mt-1 whitespace-nowrap shadow-lg after:content-[''] after:absolute after:bottom-full after:left-1/2 after:-translate-x-1/2 after:border-4 after:border-transparent after:border-b-gray-800 pointer-events-none"
  >
    {tooltip}
  </span>
</span>
