---
import { formatDistanceToNow, format } from "date-fns";
import Tooltip from "@components/ui/Tooltip.astro";

interface Props {
  date: string | Date;
}

const { date } = Astro.props;
const parsedDate = new Date(date);
const relativeTime = formatDistanceToNow(parsedDate, { addSuffix: true });
const absoluteDate = format(parsedDate, "MMMM d, yyyy 'at' h:mm a");
---

<Tooltip tooltip={absoluteDate}>{relativeTime}</Tooltip>
