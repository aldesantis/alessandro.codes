---
import { Icon } from "astro-icon/components";
---

<div class="text-xl font-serif text-stone-700">Let's stay in touch?</div>

<form
  action="https://buttondown.com/api/emails/embed-subscribe/aldesantis"
  method="post"
  class="embeddable-buttondown-form font-sans"
>
  <div class="flex mt-2 min-w-[400px]">
    <div class="-mr-px grid grow grid-cols-1 focus-within:relative">
      <input
        type="email"
        name="email"
        id="bd-email"
        required
        class="col-start-1 row-start-1 block w-full rounded-l-md bg-white py-2 px-4 text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-orange-400"
        placeholder="your@email.com"
      />
    </div>
    <button
      type="submit"
      value="Subscribe"
      class="flex shrink-0 items-center gap-x-1.5 rounded-r-md bg-orange-400 px-4 py-2 font-medium text-white outline-1 -outline-offset-1 outline-gray-300 hover:bg-orange-500 focus:relative focus:outline-2 focus:-outline-offset-2 focus:outline-orange-400"
    >
      <Icon name="fa6-regular:paper-plane" class="size-4" />
    </button>
  </div>
</form>
