---
import Link from "@components/ui/typography/Link.astro";

const currentPath = Astro.url.pathname;

const links = [
  { href: "/", text: "Home" },
  { href: "/about", text: "About" },
  { href: "/now", text: "Now" },
];
---

<div class="py-4 border-b mb-8">
  <div class="container">
    <nav class="flex items-center justify-between font-sans">
      <div class="flex flex-1">
        <a href="/" class="font-semibold hover:text-orange-400">
          Alessandro Desantis
        </a>
      </div>

      <div class="flex flex-1 justify-end gap-x-4">
        {
          links.map(({ href, text }) => (
            <Link href={href} variant="secondary" active={currentPath === href}>
              {text}
            </Link>
          ))
        }
      </div>
    </nav>
  </div>
</div>
