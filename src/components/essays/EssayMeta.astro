---
import Meta from "@components/ui/Meta.astro";
import type { CollectionEntry } from "astro:content";
import { render } from "astro:content";
import { formatDate } from "src/lib/utils";

export interface Props {
  essay: CollectionEntry<"essays">;
}

const { essay } = Astro.props;
const { remarkPluginFrontmatter } = await render(essay);

const formattedDate = formatDate(essay.data.publishedOn);
---

<Meta>
  Published on {formattedDate}
  Â·
  {remarkPluginFrontmatter.readingTime}
  min{remarkPluginFrontmatter.readingTime != 1 && "s"}
</Meta>
