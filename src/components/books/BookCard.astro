---
import LinkedCard from "@components/ui/LinkedCard.astro";
import ContentMeta from "@components/content/ContentMeta.astro";
import BookCover from "@components/books/BookCover.astro";
import type { CollectionEntry } from "astro:content";

interface Props {
  book: CollectionEntry<"books">;
}

const { book } = Astro.props;
---

<LinkedCard href={`/books/${book.id}`}>
  <div slot="cover">
    <BookCover book={book} class="object-cover object-top w-full" />
  </div>

  <h3 class="mt-2 text-lg font-sans" slot="title">
    {book.data.title}
  </h3>

  <ContentMeta content={book} />
</LinkedCard>
